@model OrderDetails
@{
    ViewData["Title"] = "CheckOut";
}

<section id="content">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="padding25">
                    <h4>Zəhmət olmasa məlumatlarınızı daxil edin</b></h4>
                </div>
                <div class="text-danger" asp-validation-summary="All"></div>
                <form method="post">
                    <div class="row">
                        <div class="form-group col-xs-12">
                            <input asp-for="Unvan" class="form-control input-lg" placeholder="Ünvan">
                        </div>
                        <div class="form-group col-xs-12">
                            <input asp-for="Adres" class="form-control input-lg" placeholder="Adres">
                        </div>
                        <div class="form-group col-xs-12">
                            <input asp-for="Seher" class="form-control input-lg" placeholder="Şəhər">
                        </div>
                        <div class="form-group col-xs-12">
                            <input asp-for="Erazi" class="form-control input-lg" placeholder="Ərzi">
                        </div>
                        <div class="form-group col-xs-12">
                            <input asp-for="Telefon" class="form-control input-lg" placeholder="Telefon">
                        </div>
                        <div class="form-group col-xs-12 text-left">
                            <button type="submit" class="btn btn-primary btn-lg"><i class="fa fa-send fa-fw"></i>Sifarişi Təstiqlə</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-md-4">
               

            </div>
        </div>
    </div>

</section>

